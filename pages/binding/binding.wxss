/* pages/binding/binding.wxss */
.login_warp{
  min-height: 100vh;
  background: #f2f2f2;
}
.login_form_list{
  margin: 20rpx 0 1px;
  background: #fff;
}
.login_form_item{
  height: 60rpx;
  border-bottom: 1px solid #ddd;
  padding: 10rpx 0;
}
.login_form_item>view{
  font-size:26rpx;
  line-height: 60rpx;
}
.label{
  width: 150rpx;
  box-sizing: border-box;
  padding-left: 25rpx;
}
.input{
  flex: 4;
}
.msg_box{
  flex: 2;
  display:inline-block;
  padding-left:5rpx;
  border-left:1px solid #efefef;
  text-align: center;
  font-size:17px;
  box-sizing: border-box;
  color:#a10b14;
}
.bindmsg, 
.err_box{
  font-size: 30rpx;
  color: #ddd;
  padding: 15rpx 30rpx;
  background: #fff;
}
.err_box{
  color: red;
}
.login_btn{
  margin-top: 20rpx;
}
.login_btn_item>view{
  width: 650rpx;
  margin: 20rpx auto;
  background: #ddd;
  padding: 20rpx 0;
  text-align: center;
  border-radius: 20rpx;
  color: #aaa;
  font-size: 25rpx;
}
.login_btn_item>.active{
  background: #09bb07;
  color: #fff;
}